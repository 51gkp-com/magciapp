<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/shop_tab_item_num_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/shop_tab_item_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.4"
        android:text="333"
        style="@style/auto_text_size"
        android:visibility="visible"
        app:autoSizeMaxTextSize="25sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="@color/javashop_color_black"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        />
    <ImageView
        android:id="@+id/shop_tab_item_icon_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/shop_tab_item_title_tv"
        app:layout_constraintHeight_percent="0.5"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/javashop_icon_shop_red"
        />
    <TextView
        android:id="@+id/shop_tab_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.3"
        android:text="店铺首页"
        app:layout_constraintVertical_bias="0.8"
        style="@style/auto_text_size"
        app:autoSizeMaxTextSize="15sp"
        android:textColor="#5c5c5c"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        />
</android.support.constraint.ConstraintLayout>