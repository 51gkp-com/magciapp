<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.component.shop.weiget.ShopSearchView.SearchVM"/>
        <import type="android.view.View"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/shop_search_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            bind:auto_topbar_content_height="@{true}"
            android:background="@color/javashop_color_white"
            bind:backgroundColor="@{@color/javashop_color_white}"
            >
            <TextView
                android:id="@+id/shop_search_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintDimensionRatio="w,2:1"
                android:text="取消"
                android:gravity="center"
                bind:layout_constraintHeight_percent="0.4"
                style="@style/auto_text_size"
                android:textColor="@color/javashop_color_black"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />
            <TextView
                android:id="@+id/shop_search_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintHeight_percent="0.4"
                bind:layout_constraintWidth_percent="0.2"
                bind:layout_constraintRight_toRightOf="parent"
                android:text="搜本店"
                android:gravity="center"
                android:textColor="#bccdc2"
                style="@style/auto_text_size"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />
            <View
                android:id="@+id/shop_search_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toRightOf="@id/shop_search_cancel"
                bind:layout_constraintRight_toLeftOf="@id/shop_search_hint"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintWidth_percent="0.65"
                bind:layout_constraintHeight_percent="0.6"
                android:background="@drawable/javashop_circle_gray"
                />
            <ImageView
                android:id="@+id/shop_search_icon_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="@id/shop_search_bg"
                bind:layout_constraintTop_toTopOf="@id/shop_search_bg"
                bind:layout_constraintBottom_toBottomOf="@id/shop_search_bg"
                android:src="@drawable/javashop_find_black"
                bind:layout_constraintHeight_percent="0.3"
                bind:layout_constraintDimensionRatio="w,1:1"
                bind:layout_constraintRight_toRightOf="@id/shop_search_bg"
                bind:layout_constraintHorizontal_bias="0.05"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toRightOf="@id/shop_search_icon_iv"
                bind:layout_constraintRight_toRightOf="@+id/shop_search_clear_text_iv"
                bind:layout_constraintTop_toTopOf="@id/shop_search_bg"
                bind:layout_constraintBottom_toBottomOf="@id/shop_search_bg"
                android:background="@null"
                bind:layout_constraintHeight_percent="0.45"
                android:text="@={data.text}"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:lines="1"
                android:gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/shop_search_clear_text_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/javashop_icon_cancel_gray"
                bind:layout_constraintTop_toTopOf="@id/shop_search_bg"
                bind:layout_constraintBottom_toBottomOf="@id/shop_search_bg"
                bind:layout_constraintRight_toRightOf="@id/shop_search_bg"
                bind:layout_constraintHeight_percent="0.3"
                android:visibility="@{ data.text.get().length() > 0 ?  View.VISIBLE : View.GONE}"
                bind:layout_constraintDimensionRatio="w,1:1"
                bind:layout_constraintLeft_toLeftOf="@id/shop_search_bg"
                bind:layout_constraintHorizontal_bias="0.97"
                />
        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/shop_search_mask"
            app:layout_constraintTop_toBottomOf="@id/shop_search_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_mask"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
