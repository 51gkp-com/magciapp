<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.GoodsItemViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:to_goods="@{data.goodsId}"
            bind:backgroundColor="@{@color/javashop_color_white}"
            android:background="@color/javashop_color_white"
            app:layout_constraintDimensionRatio="h,1:0.35"
            >
            <ImageView
                android:id="@+id/shop_list_item_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:url="@{data.goodsImage}"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintDimensionRatio="w,1:1"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/shop_list_item_name_tv"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                bind:layout_constraintTop_toTopOf="parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/shop_list_item_iv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/javashop_color_black"
                app:layout_constraintHeight_percent="0.4"
                android:lines="2"
                android:ellipsize="end"
                android:text="@{data.goodsName}"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/shop_all_list_comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/shop_list_item_iv"
                android:text="@{data.commentNum}"
                android:ellipsize="end"
                android:textColor="#8e9b9c"
                android:lines="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/shop_all_list_comment_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/shop_all_list_comment_num_tv"
                android:text="@{data.feedbackRate}"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#8e9b9c"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/shop_all_list_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toTopOf="@id/shop_all_list_comment_num_tv"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintLeft_toRightOf="@id/shop_list_item_iv"
                android:text="@{String.valueOf(data.goodsPrice)}"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="20sp"
                app:price_type="true"
                android:textColor="@color/javashop_color_price_red"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:visibility="@{data.canInquiry != 1 ? View.VISIBLE : View.GONE}"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/goods_search_list_item_inquiry_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#e6a23c"
                android:visibility="@{data.canInquiry == 1 ? View.VISIBLE : View.GONE}"
                bind:to_inquiry_price="@{data}"
                app:layout_constraintBottom_toTopOf="@id/shop_all_list_comment_num_tv"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintLeft_toRightOf="@id/shop_list_item_iv"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                >

                <ImageView
                    android:id="@+id/iv_inquiry_price"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/service"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="询价"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_inquiry_price"
                    />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="2px"
                android:background="@color/javashop_color_line_gray"
                bind:layout_constraintLeft_toLeftOf="@id/shop_all_list_comment_num_tv"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toBottomOf="@id/shop_all_list_comment_num_tv"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
