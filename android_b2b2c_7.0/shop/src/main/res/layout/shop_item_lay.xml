<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,5:1"
            android:id="@+id/shop_item_content"
            >
            <ImageView
                android:id="@+id/shop_item_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintDimensionRatio="w,3:1"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/launcher"
                android:background="@drawable/javashop_fillet_gray_bg"
                />
            <TextView
                android:id="@+id/shop_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/shop_item_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.35"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                app:layout_constraintVertical_bias="0.2"
                android:textSize="15sp"
                android:textColor="#2b2b2b"
                android:text="京东自营"
                />
            <TextView
                android:id="@+id/shop_item_collect_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/shop_item_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.35"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                app:layout_constraintVertical_bias="0.7"
                android:textSize="12sp"
                android:textColor="#A0A2A4"
                android:text="0人关注"
                />
            <TextView
                android:id="@+id/shop_item_into"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/javashop_color_goods_search_action_item_selected"
                android:background="@drawable/javashop_fillet_red_bg"
                android:text="进店"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/javashop_color_line_gray"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/shop_goods_a"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.333"
            app:layout_constraintTop_toBottomOf="@id/shop_item_content"
            app:layout_constraintDimensionRatio="w,1:1"
            >
            <ImageView
                android:id="@+id/goods_a_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/goods_a_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="@color/javashop_color_white"
                android:background="#77000000"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/shop_goods_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.333"
            app:layout_constraintLeft_toRightOf="@id/shop_goods_a"
            app:layout_constraintTop_toBottomOf="@id/shop_item_content"
            app:layout_constraintDimensionRatio="w,1:1"
            >
            <ImageView
                android:id="@+id/goods_b_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/goods_b_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="@color/javashop_color_white"
                android:background="#77000000"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/shop_goods_c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/shop_goods_b"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.333"
            app:layout_constraintTop_toBottomOf="@id/shop_item_content"
            app:layout_constraintDimensionRatio="w,1:1"
            >
            <ImageView
                android:id="@+id/goods_c_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/goods_c_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="@color/javashop_color_white"
                android:background="#77000000"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>