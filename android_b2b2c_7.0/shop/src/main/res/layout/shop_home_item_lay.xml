<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.GoodsItemViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        bind:to_goods="@{data.goodsId}"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:backgroundColor="@{@color/javashop_color_white}"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,1:1.25"
            >
            <ImageView
                android:id="@+id/shop_home_item_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintDimensionRatio="h,1:1"
                bind:url="@{data.goodsImage}"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:background="#fff"
                app:layout_constraintVertical_bias="0.2"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/shop_home_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintTop_toBottomOf="@id/shop_home_item_iv"
                android:text="@{data.goodsName}"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                android:textColor="#555555"
                android:lines="2"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:id="@+id/shop_home_item_price_tv"
                app:layout_constraintTop_toBottomOf="@id/shop_home_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:lines="1"
                android:text="现售价￥5699 ￥7999"
                android:gravity="center"
                android:textColor="#fbac42"
                bind:price_with_shop_home="@{data}"
                android:visibility="@{data.canInquiry != 1 ? View.VISIBLE : View.GONE}"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/goods_search_list_item_inquiry_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#e6a23c"
                android:visibility="@{data.canInquiry == 1 ? View.VISIBLE : View.GONE}"
                bind:to_inquiry_price="@{data}"
                app:layout_constraintTop_toBottomOf="@id/shop_home_item_name_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <ImageView
                    android:id="@+id/iv_inquiry_price"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/service"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="询价"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_inquiry_price"
                    />

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
