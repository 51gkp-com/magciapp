<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.component.member.vm.MemberLoginViewModel"/>
        <import type="android.view.View"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:bind = "http://schemas.android.com/apk/res-auto"
        android:background="@color/javashop_color_white"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.enation.javashop.android.lib.widget.CommonActionBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:auto_topbar_height="@{true}"
            app:layout_constraintTop_toTopOf="parent"
            app:left_image="@drawable/javashop_back_black"
            app:title_text="登录"
            app:title_text_color="@color/javashop_color_black"
            android:id="@+id/member_login_topbar"
            />

        <TextView
            android:id="@+id/member_login_type_t_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/member_login_topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.5"
            bind:layout_constraintDimensionRatio="h,8.5:1"
            style="@style/auto_text_size"
            android:gravity="center"
            android:text="账号密码登录"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:textColor="@{data.loginTypeObser ? @color/javashop_color_selected_red : @color/javashop_color_nomal_color_gray}"
            />
        <TextView
            android:id="@+id/member_login_type_p_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_login_topbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            bind:layout_constraintDimensionRatio="h,8.5:1"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintHorizontal_bias="1"
            style="@style/auto_text_size"
            android:layout_marginTop="10dp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:text="手机号快捷登录"
            android:textColor="@{data.loginTypeObser ? @color/javashop_color_nomal_color_gray : @color/javashop_color_selected_red}"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/member_login_type_t_tv"
            app:layout_constraintLeft_toLeftOf="@id/member_login_type_t_tv"
            app:layout_constraintRight_toRightOf="@id/member_login_type_t_tv"
            android:background="@color/javashop_color_select_color_red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/member_login_type_p_tv"
            app:layout_constraintLeft_toLeftOf="@id/member_login_type_p_tv"
            app:layout_constraintRight_toRightOf="@id/member_login_type_p_tv"
            android:background="@color/javashop_color_select_color_red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="@{data.loginTypeObser ? View.GONE : View.VISIBLE}"
            />

        <TextView
            android:id="@+id/member_login_phone_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_type_t_tv"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.12"
            android:textColor="@color/javashop_color_black"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20dp"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:text="手机号"
            android:gravity="center"
            android:visibility="@{data.loginTypeObser ? View.GONE : View.VISIBLE}"
            app:layout_constraintDimensionRatio="h,2:1"
            />

        <EditText
            android:id="@+id/member_login_phone_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/member_login_phone_header"
            app:layout_constraintTop_toTopOf="@id/member_login_phone_header"
            app:layout_constraintBottom_toBottomOf="@id/member_login_phone_header"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:visibility="@{data.loginTypeObser ? View.GONE : View.VISIBLE}"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@id/member_login_phone_header"
            app:layout_constraintRight_toRightOf="@id/member_login_phone_et"
            app:layout_constraintTop_toBottomOf="@id/member_login_phone_header"
            android:background="@color/javashop_color_line_gray"
            android:layout_marginTop="10dp"
            android:visibility="@{data.loginTypeObser ? View.GONE : View.VISIBLE}"
            />


        <TextView
            android:id="@+id/member_login_user_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_phone_header"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.12"
            android:textColor="@color/javashop_color_black"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20dp"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:text="账号"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            android:gravity="left"
            app:layout_constraintDimensionRatio="h,2.2:1"
            />

        <EditText
            android:id="@+id/member_login_user_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/member_login_user_header"
            app:layout_constraintTop_toTopOf="@id/member_login_user_header"
            app:layout_constraintBottom_toBottomOf="@id/member_login_user_header"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:hint="请输入账号"
            android:layout_marginRight="20dp"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            android:background="@null"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@id/member_login_user_header"
            app:layout_constraintRight_toRightOf="@id/member_login_user_et"
            app:layout_constraintTop_toBottomOf="@id/member_login_user_header"
            android:background="@color/javashop_color_line_gray"
            android:layout_marginTop="10dp"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            />


        <TextView
            android:id="@+id/member_login_pass_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_user_header"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.12"
            android:textColor="@color/javashop_color_black"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20dp"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:text="密码"
            android:gravity="left"
            app:layout_constraintDimensionRatio="h,2.2:1"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            />
        <ImageView
            android:id="@+id/member_login_pass_show_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toTopOf="@id/member_login_pass_header"
            bind:layout_constraintBottom_toBottomOf="@id/member_login_pass_header"
            bind:layout_constraintDimensionRatio="w,1:1"
            android:src="@drawable/javashop_icon_eye"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:id="@+id/member_login_pass_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLength="20"
            app:layout_constraintLeft_toRightOf="@id/member_login_pass_header"
            app:layout_constraintTop_toTopOf="@id/member_login_pass_header"
            app:layout_constraintBottom_toBottomOf="@id/member_login_pass_header"
            android:textSize="15sp"
            bind:layout_constraintRight_toLeftOf="@id/member_login_pass_show_iv"
            android:layout_marginLeft="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@null"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/member_login_pass_clear_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            bind:layout_constraintRight_toLeftOf="@id/member_login_pass_show_iv"
            bind:layout_constraintTop_toTopOf="@id/member_login_pass_header"
            bind:layout_constraintBottom_toBottomOf="@id/member_login_pass_header"
            bind:layout_constraintDimensionRatio="w,1:1"
            android:src="@drawable/javashop_icon_cancel_gray"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@id/member_login_pass_header"
            app:layout_constraintRight_toRightOf="@id/member_login_pass_et"
            app:layout_constraintTop_toBottomOf="@id/member_login_pass_header"
            android:background="@color/javashop_color_line_gray"
            android:layout_marginTop="10dp"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            />

        <TextView
            android:id="@+id/member_login_vcode_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_pass_header"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.12"
            android:textColor="@color/javashop_color_black"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20dp"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:text="验证码"
            android:gravity="left"
            app:layout_constraintDimensionRatio="h,2.2:1"
            />
        <ImageView
            android:id="@+id/member_login_vcode_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toBottomOf="@id/member_login_pass_et"
            bind:layout_constraintBottom_toBottomOf="@id/member_login_vcode_header"
            bind:layout_constraintDimensionRatio="w,2:1"
            bind:layout_constraintHeight_percent="0.05"
            bind:layout_constraintVertical_bias="1"
            android:src="@mipmap/launcher"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/member_login_vcode_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLength="4"
            app:layout_constraintLeft_toRightOf="@id/member_login_vcode_header"
            app:layout_constraintTop_toTopOf="@id/member_login_vcode_header"
            app:layout_constraintBottom_toBottomOf="@id/member_login_vcode_header"
            android:textSize="15sp"
            bind:layout_constraintWidth_percent="0.5"
            android:layout_marginLeft="10dp"
            android:hint="请输入验证码"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@id/member_login_vcode_header"
            app:layout_constraintRight_toRightOf="@id/member_login_vcode_et"
            app:layout_constraintTop_toBottomOf="@id/member_login_vcode_header"
            android:background="@color/javashop_color_line_gray"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/member_login_confrim_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_login_vcode_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintDimensionRatio="h,7.5:1"
            android:background="@drawable/javashop_bg_btn_red_selector"
            android:gravity="center"
            android:text="@{data.loginTypeObser ? @string/javashop_login : @string/javashop_send_message}"
            style="@style/auto_text_size"
            android:padding="10sp"
            android:textColor="@color/javashop_color_white"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/member_login_forget_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_confrim_tv"
            style="@style/auto_text_size"
            android:text="忘记密码"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.3"
            bind:layout_constraintDimensionRatio="h,5:1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="@{data.loginTypeObser ? View.VISIBLE : View.GONE}"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/member_login_register_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_login_confrim_tv"
            style="@style/auto_text_size"
            android:text="新用户注册"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHorizontal_bias="1"
            bind:layout_constraintDimensionRatio="h,5:1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <View
            android:id="@+id/member_login_other_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:background="@color/javashop_color_line_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            bind:height_with_width_percent="@{5}"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toTopOf="@id/member_login_other_line"
            bind:layout_constraintBottom_toBottomOf="@id/member_login_other_line"
            bind:layout_constraintWidth_percent="0.45"
            style="@style/auto_text_size"
            android:gravity="center"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:textColor="@color/javashop_color_nomal_color_gray"
            android:text="其他登录方式"
            android:background="@color/javashop_color_white"
            bind:backgroundColor="@{@color/javashop_color_white}"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            bind:layout_constraintTop_toBottomOf="@id/member_login_other_line"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintDimensionRatio="h,5:1"
            bind:layout_constraintWidth_percent="0.8"
            bind:layout_constraintVertical_bias="0.4"
            >
            <ImageView
                android:id="@+id/member_login_connect_qq"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="parent"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintRight_toLeftOf="@+id/member_login_connect_wechat"
                bind:layout_constraintHeight_percent="0.7"
                bind:layout_constraintDimensionRatio="w,1:1"
                android:src="@drawable/umeng_socialize_qq"
                bind:layout_constraintVertical_bias="0"
                />
            <ImageView
                android:id="@+id/member_login_connect_wechat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toRightOf="@id/member_login_connect_qq"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintHeight_percent="0.7"
                bind:layout_constraintRight_toLeftOf="@+id/member_login_connect_weibo"
                bind:layout_constraintDimensionRatio="w,1:1"
                android:src="@drawable/umeng_socialize_wechat"
                bind:layout_constraintVertical_bias="0"
                />
            <ImageView
                android:id="@+id/member_login_connect_weibo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toRightOf="@id/member_login_connect_wechat"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintRight_toLeftOf="@+id/member_login_connect_alipay"
                bind:layout_constraintHeight_percent="0.7"
                bind:layout_constraintDimensionRatio="w,1:1"
                android:src="@drawable/umeng_socialize_sina"
                bind:layout_constraintVertical_bias="0"
                />
            <ImageView
                android:id="@+id/member_login_connect_alipay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toRightOf="@id/member_login_connect_weibo"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintHeight_percent="0.7"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintDimensionRatio="w,1:1"
                android:src="@drawable/umeng_socialize_alipay"
                bind:layout_constraintVertical_bias="0"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="@id/member_login_connect_qq"
                bind:layout_constraintRight_toRightOf="@id/member_login_connect_qq"
                bind:layout_constraintTop_toBottomOf="@id/member_login_connect_qq"
                bind:layout_constraintBottom_toBottomOf="parent"
                style="@style/auto_text_size"
                android:text="QQ"
                android:gravity="center"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="@id/member_login_connect_wechat"
                bind:layout_constraintRight_toRightOf="@id/member_login_connect_wechat"
                bind:layout_constraintTop_toBottomOf="@id/member_login_connect_wechat"
                bind:layout_constraintBottom_toBottomOf="parent"
                style="@style/auto_text_size"
                android:text="微信"
                android:gravity="center"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="@id/member_login_connect_weibo"
                bind:layout_constraintRight_toRightOf="@id/member_login_connect_weibo"
                bind:layout_constraintTop_toBottomOf="@id/member_login_connect_weibo"
                bind:layout_constraintBottom_toBottomOf="parent"
                style="@style/auto_text_size"
                android:text="微博"
                android:gravity="center"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                bind:layout_constraintLeft_toLeftOf="@id/member_login_connect_alipay"
                bind:layout_constraintRight_toRightOf="@id/member_login_connect_alipay"
                bind:layout_constraintTop_toBottomOf="@id/member_login_connect_alipay"
                bind:layout_constraintBottom_toBottomOf="parent"
                style="@style/auto_text_size"
                android:text="支付宝"
                android:gravity="center"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/member_login_agreement_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
