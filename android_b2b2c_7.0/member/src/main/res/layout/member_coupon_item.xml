<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.CouponViewModel"/>
        <import type="com.enation.javashop.android.middleware.bind.DataBindingHelper"/>
        <import type="android.view.View"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/javashop_shadow_white_bg"
            app:layout_constraintDimensionRatio="h,3.2:1"
            />

        <View
            android:id="@+id/member_coupon_item_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@{ (data.dateed || data.useed) ?  @drawable/javashop_bg_coupon_useed : @drawable/javashop_bg_coupon_unuse}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            android:layout_margin="1dp"
            />


        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/member_coupon_item_discount_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textStyle="bold"
            app:price_type="true"
            app:auto_size="true"
            app:decimal_handle="if_exist_retain"
            android:text="@{String.valueOf( data.price )}"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/javashop_color_white"
            android:textSize="100sp"
            app:layout_constraintBottom_toBottomOf="@id/member_coupon_item_header"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintLeft_toLeftOf="@id/member_coupon_item_header"
            app:layout_constraintRight_toRightOf="@id/member_coupon_item_header"
            app:layout_constraintTop_toTopOf="@id/member_coupon_item_header"
            app:layout_constraintVertical_bias="0.2"
            />

        <TextView
            android:id="@+id/member_coupon_item_des_tv"
            style="@style/auto_text_size"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@{DataBindingHelper.couponDiscount(data.basePrice)}"
            android:textColor="@color/javashop_color_white"
            app:layout_constraintBottom_toBottomOf="@id/member_coupon_item_header"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toTopOf="@id/member_coupon_item_header"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintLeft_toLeftOf="@+id/member_coupon_item_header"
            app:layout_constraintRight_toRightOf="@+id/member_coupon_item_header"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <CheckBox
            android:id="@+id/member_coupon_item_check"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/javashop_check_box_selector"
            android:button="@null"
            android:clickable="false"
            android:checked="@{data.isSelect != 1 ? false : true }"
            app:layout_constraintWidth_percent="0.055"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="@{ data.isSelect == -1 ? View.GONE : View.VISIBLE }"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/member_coupon_item_type_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintDimensionRatio="w,2:1"
            android:background="@{ (data.dateed || data.useed) ?  @drawable/javashop_corner_gray : @drawable/javashop_corner_blue}"
            android:textColor="@color/javashop_color_white"
            android:gravity="center"
            style="@style/auto_text_size"
            android:layout_marginLeft="10dp"
            android:text="@{ data.shopId == 1 ? @string/javashop_self : @string/javashop_shop }"
            app:layout_constraintVertical_bias="0"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/member_coupon_item_hint_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/member_coupon_item_type_tv"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_type_tv"
            app:layout_constraintBottom_toBottomOf="@id/member_coupon_item_type_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.15"
            android:lines="1"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="@{ DataBindingHelper.couponDes( data.shopName ) }"
            android:textColor="@{ (data.dateed || data.useed) ?  @color/javashop_color_text_color_a : @color/javashop_color_navy }"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/member_coupon_item_shop_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_header"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:text="@{data.shopName}"
            app:layout_constraintHeight_percent="0.13"
            android:textSize="10sp"
            android:textColor="@color/javashop_color_text_color_a"
            android:lines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            bind:to_shop="@{data.shopId}"
            />
        <ImageView
            android:id="@+id/member_coupon_item_shop_into_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:src="@{(data.dateed || data.useed) ?  @drawable/javashop_into_gray : @drawable/javashop_icon_into_black}"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintVertical_bias="1"
            bind:to_shop="@{data.shopId}"
            />

        <View
            android:id="@+id/member_coupon_item_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_des_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/member_coupon_item_shop_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/javashop_dotted_line_gray"
            />

        <TextView
            android:id="@+id/member_coupon_item_use_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_coupon_item_type_tv"
            app:layout_constraintBottom_toTopOf="@id/member_coupon_item_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_header"
            android:layout_marginRight="10dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintDimensionRatio="h,3:1"
            android:background="@{ data.isGet ? @drawable/javashop_corner_shadow_blue : @drawable/javashop_fillet_blue_bg }"
            android:textColor="@{ data.isGet ? @color/javashop_color_coupon_b : @color/javashop_color_coupon_a}"
            android:gravity="center"
            android:visibility="@{ (data.dateed || data.useed || data.isSelect() != -1 ) ?  View.GONE : View.VISIBLE }"
            app:layout_constraintVertical_bias="0.8"
            style="@style/auto_text_size"
            android:text="@{data.isGet ? @string/javashop_get : @string/javashop_use }"
            android:padding="2dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/member_coupon_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/member_coupon_item_header"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/member_coupon_item_use_tv"
            app:layout_constraintBottom_toBottomOf="@id/member_coupon_item_use_tv"
            android:layout_marginBottom="5dp"
            android:text="@{data.useDate}"
            app:layout_constraintHeight_percent="0.13"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:lines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintVertical_bias="0"
            android:layout_marginRight="4dp"
            android:visibility="@{  data.useed  ? View.VISIBLE : View.GONE }"
            android:background="@drawable/javashop_icon_useed"
            />
    </android.support.constraint.ConstraintLayout>
</layout>