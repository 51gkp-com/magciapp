<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/javashop_color_white"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            />
        <ImageView
            android:id="@+id/post_comment_shop_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_margin="10dp"
            android:src="@drawable/javashop_icon_shop_black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_iv"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_iv"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_iv"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/auto_text_size"
            android:text="店铺评分"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:gravity="center_vertical"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/post_comment_shop_des_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/post_comment_shop_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="描述相符"
            style="@style/auto_text_size"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="h,3:1"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/post_comment_shop_logistics_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/post_comment_shop_des_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="物流相符"
            style="@style/auto_text_size"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="h,3:1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:id="@+id/post_comment_shop_service_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/post_comment_shop_logistics_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="服务相符"
            style="@style/auto_text_size"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="h,3:1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <com.enation.javashop.android.lib.widget.StarView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/post_comment_shop_des_star"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_des_title"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_des_title"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_des_title"
            app:layout_constraintDimensionRatio="w,7:1"
            app:star="5"
            app:selectImage="@drawable/javashop_icon_star_selected_post"
            app:nomalImage="@drawable/javashop_icon_star_nomal_post"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.StarView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/post_comment_shop_logistics_star"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_logistics_title"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_logistics_title"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_logistics_title"
            app:layout_constraintDimensionRatio="w,7:1"
            app:star="5"
            app:selectImage="@drawable/javashop_icon_star_selected_post"
            app:nomalImage="@drawable/javashop_icon_star_nomal_post"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.StarView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/post_comment_shop_service_star"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_service_title"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_service_title"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_service_title"
            app:layout_constraintDimensionRatio="w,7:1"
            app:star="5"
            app:selectImage="@drawable/javashop_icon_star_selected_post"
            app:nomalImage="@drawable/javashop_icon_star_nomal_post"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/post_comment_shop_des_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:lines="1"
            android:textSize="18sp"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_des_star"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_des_star"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_des_star"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/post_comment_shop_logistics_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:lines="1"
            android:textSize="18sp"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_logistics_star"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_logistics_star"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_logistics_star"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/post_comment_shop_service_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:lines="1"
            android:textSize="18sp"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/post_comment_shop_service_star"
            app:layout_constraintTop_toTopOf="@id/post_comment_shop_service_star"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_shop_service_star"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            />

    </android.support.constraint.ConstraintLayout>
</layout>