<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.PostCommentGoodsViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/javashop_color_white"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHorizontal_bias="0"
            android:src="@drawable/image_loading"
            bind:url="@{data.goodsImage}"
            android:layout_margin="10dp"
            android:id="@+id/post_goods_comment_item_iv"
            />
        <TextView
            android:id="@+id/post_goods_comment_item_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/post_goods_comment_item_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.28"
            app:layout_constraintDimensionRatio="h,4:1"
            app:layout_constraintTop_toTopOf="@id/post_goods_comment_item_iv"
            app:layout_constraintBottom_toTopOf="@+id/post_goods_comment_item_star"
            style="@style/auto_text_size"
            android:text="商品评分"
            android:textColor="@color/javashop_color_black"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <com.enation.javashop.android.lib.widget.StarView
            android:id="@+id/post_goods_comment_item_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/post_goods_comment_item_hint"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_hint"
            app:layout_constraintBottom_toBottomOf="@id/post_goods_comment_item_iv"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="h,7:1"
            app:selectImage="@drawable/javashop_icon_star_selected_post"
            app:nomalImage="@drawable/javashop_icon_star_nomal_post"
            />
        <View
            android:id="@+id/post_goods_comment_item_bg_a"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,3:1"
            android:background="@color/javashop_color_header_a"
            bind:backgroundColor="@{@color/javashop_color_header_a}"
            android:layout_marginTop="10dp"
            />

        <com.enation.javashop.android.lib.widget.EditTextCompatibleScrollView
            android:id="@+id/post_goods_comment_item_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="left"
            android:maxLength="500"
            app:layout_constraintTop_toTopOf="@id/post_goods_comment_item_bg_a"
            android:background="@null"
            app:layout_constraintDimensionRatio="h,4:1"
            app:layout_constraintBottom_toBottomOf="@id/post_goods_comment_item_bg_a"
            app:layout_constraintVertical_bias="0.2"
            android:hint="写下购买体会和使用感受来帮助其它小伙伴~"
            android:text="@={data.commentContent}"
            android:textSize="13sp"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/post_goods_comment_item_textnum"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_content"
            app:layout_constraintBottom_toBottomOf="@id/post_goods_comment_item_bg_a"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:text="0/500"
            android:textSize="12sp"
            bind:text_num_count_percent="@{data.commentContent}"
            android:padding="2dp"
            android:lines="1"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:id="@+id/post_goods_comment_item_image_lay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_bg_a"
            android:layout_marginTop="10dp"
            />
        <View
            android:id="@+id/post_goods_comment_item_line"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_image_lay"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/javashop_color_line_gray"
            />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            android:padding="10dp"
            android:textColor="@color/javashop_color_hint_color"
            android:text="你的评价能帮助其他小伙伴哟"
            android:gravity="right"
            app:layout_constraintTop_toBottomOf="@id/post_goods_comment_item_line"
            />
    </android.support.constraint.ConstraintLayout>
</layout>