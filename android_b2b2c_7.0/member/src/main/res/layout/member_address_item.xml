<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.MemberAddressViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:background="@color/javashop_color_white"
        bind:backgroundColor="@{@color/javashop_color_white}"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/member_address_item_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,8:1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/member_address_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5"
                android:text="@{data.nameObser}"
                android:textSize="15sp"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/javashop_color_navy"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/member_address_item_photo_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/member_address_item_name_tv"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5"
                android:text="@{data.phoneNumObser}"
                android:gravity="center"
                android:lines="1"
                android:textSize="15sp"
                android:textColor="@color/javashop_color_navy"
                />
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/member_address_item_photo_tv"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.35"
                android:paddingLeft="5dp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:background="@drawable/javashop_fillet_blue_small_bg"
                android:gravity="center"
                android:lines="1"
                android:textSize="15sp"
                android:textColor="#4d91ce"
                android:text="@{data.tag}"
                android:visibility="@{ (data.tag == null || data.tag.empty) ? View.GONE : View.VISIBLE  }"
                />
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/member_address_item_detail_tv"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="#888888"
            android:text="@{data.addressInfoObser}"
            />
        <View
            android:id="@+id/member_address_item_line"
            android:layout_width="0dp"
            android:layout_marginTop="15dp"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintLeft_toLeftOf="@id/member_address_item_detail_tv"
            app:layout_constraintRight_toRightOf="@id/member_address_item_detail_tv"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_detail_tv"/>

        <CheckBox
            android:id="@+id/member_address_item_default_check"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHorizontal_bias="0"
            android:button="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:checked="@{data.isDefault}"
            android:background="@drawable/javashop_check_box_selector"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/member_address_item_default_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/member_address_item_default_check"
            app:layout_constraintBottom_toBottomOf="@id/member_address_item_default_check"
            android:text="默认地址"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/member_address_item_default_check"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/member_address_item_delete_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="h,2:1"
            style="@style/auto_text_size"
            android:layout_marginRight="10dp"
            android:text="删除"
            />

        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/member_address_item_delete_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/member_address_item_delete_tv"
            app:layout_constraintWidth_percent="0.07"
            android:layout_marginRight="5dp"
            app:layout_constraintDimensionRatio="h,1:1"
            android:src="@drawable/javashop_icon_delete"
            />

        <TextView
            android:id="@+id/member_address_item_edit_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/member_address_item_delete_iv"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="h,2:1"
            style="@style/auto_text_size"
            android:text="编辑"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/member_address_item_edit_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/member_address_item_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/member_address_item_edit_tv"
            app:layout_constraintWidth_percent="0.07"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            app:layout_constraintDimensionRatio="h,1:1"
            android:src="@drawable/javashop_icon_edit"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
