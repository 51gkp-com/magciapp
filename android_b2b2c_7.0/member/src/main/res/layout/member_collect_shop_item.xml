<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.ShopViewModel"/>
        <import type="com.enation.javashop.android.middleware.bind.DataBindingHelper"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:to_shop="@{data.id}"
        android:background="@color/javashop_color_white"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,4:1"
            android:background="@color/javashop_color_white"
            />
        <ImageView
            android:id="@+id/member_collect_shop_item_icon_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="h,3:1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            bind:url="@{data.logo}"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"

            />
        <ImageView
            android:id="@+id/member_collect_shop_item_into_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.035"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="10dp"
            android:src="@drawable/javashop_into_gray"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/member_collect_shop_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/member_collect_shop_item_icon_iv"
            app:layout_constraintRight_toLeftOf="@id/member_collect_shop_item_into_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.25"
            android:text="@{data.name}"
            android:textColor="@color/javashop_color_black"
            android:lines="1"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:ellipsize="end"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:lines="1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            app:layout_constraintVertical_bias="0.7"
            android:id="@+id/member_collect_shop_item_collect_tv"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/member_collect_shop_item_icon_iv"
            app:layout_constraintRight_toLeftOf="@id/member_collect_shop_item_into_iv"
            app:layout_constraintHeight_percent="0.2"
            android:text="@{DataBindingHelper.collectText( data.collectNum )}"
            android:ellipsize="end"
            />

    </android.support.constraint.ConstraintLayout>
</layout>