<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArcView">
        <attr name="arc_height" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="LineView">

        <attr name="line_position">
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="center" value="3"/>
        </attr>
        <attr name="line_height" format="float"/>
        <attr name="horn_height" format="float"/>
        <attr name="line_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CommonActionBar">
        <attr name="holder_color" format="color|reference"/>
        <attr name="title_text" format="string"/>
        <attr name="left_text" format="string"/>
        <attr name="left_image" format="reference"/>
        <attr name="right_text" format="string|reference"/>
        <attr name="right_image" format="reference"/>
        <attr name="holder_visibility" format="boolean"/>
        <attr name="title_image" format="reference"/>
        <attr name="background_image" format="reference"/>
        <attr name="left_text_color" format="color|reference"/>
        <attr name="right_text_color" format="color|reference"/>
        <attr name="title_text_color" format="color|reference"/>
        <attr name="background_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="StarView">
        <attr name="star" format="integer"/>
        <attr name="selectImage" format="reference"/>
        <attr name="nomalImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AutoSizeTextView">
        <attr name="price_type" format="boolean"/>
        <attr name="auto_size" format="boolean"/>
        <attr name="delete_line" format="boolean"/>
        <attr name="decimal_handle" format="enum">
            <enum name="always_retain" value="1"/>
            <enum name="if_exist_retain" value="2"/>
            <enum name="always_remove" value="3"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="VerificationCodeView">
        <attr name="vcode_number" format="integer"/>
        <attr name="vcode_width" format="dimension|reference"/>
        <attr name="vcode_divider_drawable" format="reference"/>
        <attr name="vcode_text_color" format="color|reference"/>
        <attr name="vcode_text_size" format="dimension|reference"/>
        <attr name="vcode_bg_focus" format="reference"/>
        <attr name="vcode_bg_normal" format="reference"/>
        <attr name="vcode_pwd" format="boolean"/>
        <attr name="vcode_pwd_radius" format="dimension|reference"/>
        <attr name="vcode_height_percent" format="float"/>
    </declare-styleable>

    <declare-styleable name="SaleProgressView">
        <attr name="sideColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="sideWidth" format="dimension" />
        <attr name="overText" format="string" />
        <attr name="nearOverText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="isNeedAnim" format="boolean" />
        <attr name="textHeader" format="string" />
        <attr name="onlyColor" format="string" />
    </declare-styleable>
</resources>