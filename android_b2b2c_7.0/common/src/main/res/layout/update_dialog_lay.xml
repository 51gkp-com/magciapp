<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:gravity="center">


    <View
        android:id="@+id/vcode_dialog_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.4"
        android:background="@drawable/radis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1.8:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        />

    <TextView
        android:id="@+id/update_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_update_dialog_left"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="稍后再说"
        android:textColor="#FFA500"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        app:layout_constraintTop_toBottomOf="@id/update_dialog_content"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toLeftOf="@id/update_dialog_confrim"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="h,2.5:1"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/update_dialog_confrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_update_dialog_right"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="立即安装"
        android:textColor="#fff3f5f7"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        android:padding="7dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/update_dialog_content"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintLeft_toRightOf="@id/update_dialog_cancel"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="h,2.5:1"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/update_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/update_dialog_title"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        android:textSize="16sp"
        android:text="发现新版本，请更新后再使用！"
        />
    
    <TextView
        android:id="@+id/update_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/update_dialog_icon"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintHeight_percent="0.07"
        android:gravity="center"
        android:text="版本升级"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:padding="9dp"
        tools:ignore="MissingPrefix"
        />

    <ImageView
        android:id="@+id/update_dialog_icon"
        android:layout_width="215dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/vcode_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintHeight_percent="0.07"
        android:src="@drawable/update_icon_magic"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/update_dialog_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/vcode_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        android:src="@drawable/icon_cancle_gray"
        android:padding="4dp"
        />
</android.support.constraint.ConstraintLayout>