<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_mask"
            android:id="@+id/pop_common_mask"
            />
        <View
            android:id="@+id/pop_common_content_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,1:1.2"
            android:background="@color/color_white"
            bind:backgroundColor="@{@color/color_white}"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/pop_common_title_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:text="取消订单"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/color_pop_header"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/pop_common_content_bg"
            />
        <ImageView
            android:id="@+id/pop_common_back_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_cancle_gray"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/pop_common_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/pop_common_title_tv"
            android:layout_marginRight="5dp"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/pop_common_comfrim_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:text="提交"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/color_white"
            android:background="@color/color_red"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_common_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/pop_common_title_tv"
            app:layout_constraintBottom_toTopOf="@id/pop_common_comfrim_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray"
            app:layout_constraintTop_toBottomOf="@id/pop_common_title_tv"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
