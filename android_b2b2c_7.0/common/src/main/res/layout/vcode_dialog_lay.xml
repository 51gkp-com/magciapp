<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:gravity="center">


    <View
        android:id="@+id/vcode_dialog_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.4"
        android:background="@drawable/radis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1.7:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        />

    <TextView
        android:id="@+id/vcode_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_left_radis"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="取消"
        android:textColor="#ff000000"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:padding="7dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        app:layout_constraintBottom_toBottomOf="@id/vcode_dialog_bg"
        app:layout_constraintDimensionRatio="h,4:1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/vcode_dialog_confrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_radis"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="确定"
        android:textColor="#fff3f5f7"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        android:padding="7dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/vcode_dialog_bg"
        app:layout_constraintDimensionRatio="h,4:1"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintWidth_percent="0.4"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#cccccc"
        app:layout_constraintTop_toTopOf="@id/vcode_dialog_cancel"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_cancel"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_cancel"
        />

    <View
        android:id="@+id/vcode_dialog_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintTop_toTopOf="@id/vcode_dialog_bg"
        app:layout_constraintBottom_toBottomOf="@id/vcode_dialog_bg"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.6"
        />
    
    <EditText
        android:id="@+id/vcode_dialog_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/vcode_dialog_line"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_line"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_line"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintWidth_percent="0.3"
        android:background="@null"
        android:textSize="16sp"
        android:text=""
        android:hint="请输入验证码"
        android:maxLength="6"
        android:inputType="text"
        android:lines="1"
        />
    
    <ImageView
        android:id="@+id/vcode_dialog_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/vcode_dialog_line"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_line"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_line"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="h,2.3:1"
        app:layout_constraintHorizontal_bias="0.95"
        android:layout_marginBottom="3dp"
        android:scaleType="centerCrop"
        />
    
    <TextView
        android:id="@+id/vcode_dialog_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vcode_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@id/vcode_dialog_bg"
        app:layout_constraintRight_toRightOf="@id/vcode_dialog_bg"
        app:layout_constraintHeight_percent="0.07"
        android:gravity="center"
        android:text="验证码"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:padding="9dp"
        tools:ignore="MissingPrefix"
        />
</android.support.constraint.ConstraintLayout>