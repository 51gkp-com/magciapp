<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:backgroundColor="@{@color/javashop_color_white}"
        android:background="@color/javashop_color_white"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/order_after_sale_goods_item_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            android:layout_margin="5dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="h,1:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:padding="2dp"
            android:src="@mipmap/ic_launcher"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_after_sale_goods_item_name_tv"
            app:layout_constraintLeft_toRightOf="@id/order_after_sale_goods_item_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_after_sale_goods_item_iv"
            app:layout_constraintBottom_toTopOf="@+id/order_after_sale_goods_item_info_tv"
            app:layout_constraintHeight_percent="0.4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/javashop_color_navy"
            android:lines="2"
            android:ellipsize="end"
            android:text="苹果电脑，苹果电脑，苹果电脑，苹果电脑，苹果电脑，苹果电脑，苹果电脑"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_after_sale_goods_item_info_tv"
            app:layout_constraintLeft_toRightOf="@id/order_after_sale_goods_item_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_goods_item_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/order_after_sale_goods_item_iv"
            app:layout_constraintHeight_percent="0.2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/javashop_color_text_color_a"
            android:text="价格：129.00 数量x1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/javashop_cart_right_btn"
            android:padding="5dp"
            android:src="@drawable/javashop_cart_add_btn_bg"
            bind:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.06"
            />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/javashop_cart_center_tv"
            android:gravity="center"
            android:lines="1"
            android:text="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            app:layout_constraintRight_toLeftOf="@id/add_btn"
            app:layout_constraintTop_toTopOf="@id/add_btn"
            bind:layout_constraintBottom_toBottomOf="@id/add_btn"
            />

        <ImageView
            android:id="@+id/reduce_btn"
            style="@style/constraintLayout_config"
            android:background="@drawable/javashop_cart_left_btn"
            android:padding="5dp"
            android:src="@drawable/javashop_cart_add_reduce_bg"
            app:layout_constraintBottom_toBottomOf="@id/add_btn"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintRight_toLeftOf="@id/num_tv"
            app:layout_constraintTop_toTopOf="@id/add_btn"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.07"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
