<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/javashop_color_pay_bg"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.enation.javashop.android.lib.widget.CommonActionBar
            android:id="@+id/javashop_order_pay_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            bind:auto_topbar_height="@{true}"
            android:visibility="visible"
            app:title_text_color="@color/javashop_color_black"
            app:title_text="Javashop收银台"
            app:left_image="@drawable/javashop_back_black"
            android:background="@color/javashop_color_white"
            />

        <View
            android:id="@+id/order_pay_bg_a"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintTop_toBottomOf="@id/javashop_order_pay_header"
            android:background="@color/javashop_color_header_a"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="@id/order_pay_bg_a"
            android:background="@color/javashop_color_line_gray"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintBottom_toBottomOf="@id/order_pay_bg_a"
            android:background="@color/javashop_color_line_gray"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_pay_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_pay_bg_a"
            app:layout_constraintBottom_toBottomOf="@+id/order_pay_bg_a"
            android:lines="1"
            app:layout_constraintHeight_percent="0.035"
            android:textSize="20sp"
            android:textColor="@color/javashop_color_price_red"
            android:gravity="center_vertical"
            android:text="￥188.33元"
            />

        <TextView
            android:id="@+id/order_pay_price_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/auto_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/order_pay_price_tv"
            app:layout_constraintTop_toTopOf="@id/order_pay_bg_a"
            app:layout_constraintBottom_toBottomOf="@id/order_pay_bg_a"
            app:layout_constraintWidth_percent="0.4"
            bind:layout_constraintHeight_percent="0.045"
            android:text="需支付:"
            android:gravity="right"
            android:textColor="@color/javashop_color_navy"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginLeft="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/order_pay_method_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/order_pay_bg_a"
            android:layout_marginTop="10dp"
            android:background="@color/javashop_color_white"
            bind:backgroundColor="@{@color/javashop_color_white}"
            >

            <TextView
                android:id="@+id/order_pay_method_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Javashop支付方式"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#898a8c"
                bind:layout_constraintDimensionRatio="h,12:1"
                bind:text_count_for_line="@{30}"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <View
                android:id="@+id/order_pay_line_a"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/order_pay_method_header"
                android:background="@color/javashop_color_line_gray"
                />
            <LinearLayout
                bind:layout_constraintTop_toBottomOf="@id/order_pay_method_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/wechat_pay"
                    android:visibility="gone"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/order_pay_wechat_iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        bind:layout_constraintHeight_default="percent"
                        bind:layout_constraintHeight_percent="0.5"
                        bind:layout_constraintDimensionRatio="w,1:1"
                        android:src="@drawable/javashop_icon_pay_wechat"
                        />

                    <TextView
                        android:id="@+id/order_pay_wechat_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintLeft_toRightOf="@id/order_pay_wechat_iv"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toTopOf="@+id/order_pay_wechat_des_tv"
                        bind:layout_constraintHeight_percent="0.3"
                        bind:layout_constraintWidth_percent="0.4"
                        android:layout_marginLeft="10dp"
                        android:text="微信支付"
                        style="@style/auto_text_size"
                        android:textColor="@color/javashop_color_navy"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        tools:ignore="MissingPrefix"
                        />

                    <TextView
                        android:id="@+id/order_pay_wechat_des_tv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintLeft_toRightOf="@id/order_pay_wechat_iv"
                        bind:layout_constraintTop_toBottomOf="@id/order_pay_wechat_name_tv"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintHeight_percent="0.3"
                        bind:layout_constraintWidth_percent="0.4"
                        android:layout_marginLeft="10dp"
                        android:text="微信安全支付"
                        style="@style/auto_text_size"
                        android:textColor="@color/javashop_color_text_color_a"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        tools:ignore="MissingPrefix"
                        />

                    <CheckBox
                        android:id="@+id/order_pay_wechat_check_box"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/javashop_check_box_selector"
                        android:button="@null"
                        android:clickable="false"
                        android:checked="true"
                        app:layout_constraintRight_toRightOf="parent"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        bind:layout_constraintHeight_percent="0.4"
                        app:layout_constraintDimensionRatio="w,1:1"
                        bind:layout_constraintHorizontal_bias="1"
                        android:layout_marginRight="10dp"
                        />

                </android.support.constraint.ConstraintLayout>
                <View
                    android:id="@+id/order_pay_line_b"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/javashop_color_line_gray"
                    />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/alipay_pay"
                    android:visibility="gone"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/order_pay_alipay_iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        bind:layout_constraintHeight_percent="0.5"
                        bind:layout_constraintDimensionRatio="w,1:1"
                        android:src="@drawable/javashop_icon_pay_alipay"
                        />
                    <TextView
                        android:id="@+id/order_pay_alipay_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintLeft_toRightOf="@id/order_pay_alipay_iv"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toTopOf="@+id/order_pay_alipay_des_tv"
                        bind:layout_constraintHeight_percent="0.3"
                        bind:layout_constraintWidth_percent="0.4"
                        android:layout_marginLeft="10dp"
                        android:text="支付宝支付"
                        style="@style/auto_text_size"
                        android:textColor="@color/javashop_color_navy"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        tools:ignore="MissingPrefix"
                        />

                    <TextView
                        android:id="@+id/order_pay_alipay_des_tv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        bind:layout_constraintLeft_toRightOf="@id/order_pay_alipay_iv"
                        bind:layout_constraintTop_toBottomOf="@id/order_pay_alipay_name_tv"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintHeight_percent="0.3"
                        bind:layout_constraintWidth_percent="0.4"
                        android:layout_marginLeft="10dp"
                        android:text="支付宝快捷支付"
                        style="@style/auto_text_size"
                        android:textColor="@color/javashop_color_text_color_a"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        tools:ignore="MissingPrefix"
                        />

                    <CheckBox
                        android:id="@+id/order_pay_alipay_check_box"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/javashop_check_box_selector"
                        android:button="@null"
                        android:clickable="false"
                        android:checked="false"
                        app:layout_constraintRight_toRightOf="parent"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        bind:layout_constraintHeight_percent="0.4"
                        app:layout_constraintDimensionRatio="w,1:1"
                        bind:layout_constraintHorizontal_bias="1"
                        android:layout_marginRight="10dp"
                        />
                </android.support.constraint.ConstraintLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/javashop_color_line_gray"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/javashop_color_line_gray"
                />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/pay_info_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintHeight_percent="0.08"
            android:background="@color/javashop_color_pay_red"
            android:textColor="@color/javashop_color_white"
            android:gravity="center"
            bind:text_count_for_line="@{25}"
            android:text="微信支付188.33元"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
