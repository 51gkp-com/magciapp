<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.ReceiptViewModel"/>
        <import type="android.view.View"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#eef2f3"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.enation.javashop.android.lib.widget.CommonActionBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            bind:auto_topbar_height="@{true}"
            app:left_image="@drawable/javashop_back_black"
            app:title_text="设置发票信息"
            app:title_text_color="@color/javashop_color_black"
            android:id="@+id/order_create_receipt_topbar"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:backgroundColor="@{@color/javashop_color_white}"
            android:background="@color/javashop_color_white"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_topbar"
            app:layout_constraintHeight_percent="0.15"
            android:id="@+id/order_create_receipt_bg_a"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:backgroundColor="@{@color/javashop_color_white}"
            android:background="@color/javashop_color_white"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_bg_a"
            app:layout_constraintBottom_toBottomOf="@+id/order_create_receipt_title_holder"
            android:id="@+id/order_create_receipt_bg_b"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:backgroundColor="@{@color/javashop_color_white}"
            android:background="@color/javashop_color_white"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_bg_b"
            app:layout_constraintBottom_toBottomOf="@+id/order_create_receipt_content_holder"
            android:id="@+id/order_create_receipt_bg_c"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/order_create_receipt_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_bg_a"
            bind:layout_constraintDimensionRatio="h,20:1"
            style="@style/auto_text_size"
            android:textColor="@color/javashop_color_black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="发票类别"
            />

        <TextView
            android:id="@+id/order_create_receipt_none"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_type"
            app:layout_constraintLeft_toLeftOf="@id/order_create_receipt_type"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="h,2.5:1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0"
            android:text="不开发票"
            android:textColor="@color/javashop_color_select_color_red"
            android:background="@drawable/javashop_fillet_red_bg"
            android:gravity="center"
            style="@style/auto_text_size"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/order_create_receipt_paper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_none"
            app:layout_constraintLeft_toRightOf="@id/order_create_receipt_none"
            app:layout_constraintWidth_percent="0.2"
            android:layout_marginLeft="10dp"
            app:layout_constraintDimensionRatio="h,2.5:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:text="纸质发票"
            android:textColor="@color/javashop_color_nomal_color_gray"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:gravity="center"
            style="@style/auto_text_size"
            android:padding="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_bg_a"
            android:background="@color/javashop_color_line_gray"
            />

        <TextView
            android:id="@+id/order_create_receipt_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_bg_b"
            bind:layout_constraintDimensionRatio="h,20:1"
            style="@style/auto_text_size"
            android:textColor="@color/javashop_color_black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="发票抬头"
            />

        <CheckBox
            android:id="@+id/order_create_receipt_title_person_ck"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/javashop_check_box_selector"
            android:button="@null"
            android:clickable="false"
            android:checked="false"
            app:layout_constraintWidth_percent="0.055"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintLeft_toLeftOf="@id/order_create_receipt_title"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/order_create_receipt_title_person_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/order_create_receipt_title_person_ck"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_title_person_ck"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_title_person_ck"
            app:layout_constraintDimensionRatio="w,2:1"
            android:text="个人"
            android:gravity="center"
            style="@style/auto_text_size"
            />

        <CheckBox
            android:id="@+id/order_create_receipt_title_company_ck"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/javashop_check_box_selector"
            android:button="@null"
            android:clickable="false"
            android:checked="true"
            app:layout_constraintWidth_percent="0.055"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintLeft_toRightOf="@id/order_create_receipt_title_person_tv"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/order_create_receipt_title_company_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/order_create_receipt_title_company_ck"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_title_company_ck"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_title_company_ck"
            app:layout_constraintDimensionRatio="w,2:1"
            android:text="单位"
            android:gravity="center"
            style="@style/auto_text_size"
            />
        <EditText
            android:id="@+id/order_create_receipt_title_company_name_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_title_person_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:hint="请填写单位名称"
            android:textColor="@color/javashop_color_black"
            android:textSize="13sp"
            android:maxLength="35"
            android:text="@={data.receipt_title}"
            android:paddingRight="20dp"
            android:lines="1"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.06"
            android:background="@drawable/javashop_text_edit_receipt_bg"
            />

        <ImageView
            android:id="@+id/order_create_receipt_title_company_name_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="@id/order_create_receipt_title_company_name_et"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_title_company_name_et"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_title_company_name_et"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintHeight_percent="0.035"
            android:layout_marginRight="5dp"
            android:visibility="@{ data.receipt_title.get().length() > 0  ? View.VISIBLE : View.GONE}"
            android:src="@drawable/javashop_icon_cancel_gray"
            />

        <EditText
            android:id="@+id/order_create_receipt_title_company_num_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_title_company_name_et"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:maxLength="30"
            android:lines="1"
            android:hint="请在此填写纳税人识别号"
            android:text="@={data.duty_invoice}"
            android:textColorHint="@color/javashop_color_select_color_red"
            android:textSize="13sp"
            android:textColor="@color/javashop_color_black"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.06"
            android:background="@drawable/javashop_text_edit_receipt_bg"
            />
        <View
            android:id="@+id/order_create_receipt_title_holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_title_company_num_et"
            app:layout_constraintHeight_percent="0.02"
            android:background="@color/javashop_color_transparent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_bg_b"
            android:background="@color/javashop_color_line_gray"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_bg_b"
            android:background="@color/javashop_color_line_gray"
            />

        <TextView
            android:id="@+id/order_create_receipt_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_bg_c"
            bind:layout_constraintDimensionRatio="h,20:1"
            style="@style/auto_text_size"
            android:textColor="@color/javashop_color_black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="发票内容"
            />

        <LinearLayout
            android:id="@+id/order_create_receipt_content_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <View
            android:id="@+id/order_create_receipt_content_holder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_create_receipt_content_ll"
            app:layout_constraintHeight_percent="0.02"
            android:background="@color/javashop_color_transparent"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="@id/order_create_receipt_bg_c"
            android:background="@color/javashop_color_line_gray"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toTopOf="@id/order_create_receipt_bg_c"
            android:background="@color/javashop_color_line_gray"
            />

        <TextView
            android:id="@+id/order_create_receit_confrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="h,4.8:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/javashop_corners_red"
            android:text="提交"
            app:layout_constraintVertical_bias="0.95"
            android:textColor="@color/javashop_color_white"
            style="@style/auto_text_size"
            android:gravity="center"
            android:padding="7dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>