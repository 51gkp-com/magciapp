<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.LogisticsViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:background="@color/javashop_color_white"
        android:paddingBottom="10dp"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/order_detail_logistics_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintDimensionRatio="h,1:1"
            android:src="@{data.type == 1 ? @drawable/javashop_icon_complete_red :@drawable/javashop_icon_logistics_gray}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/order_detail_go_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintDimensionRatio="h,1:1"
            android:src="@drawable/javashop_icon_into_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/order_detail_logistics_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/order_detail_logistics_iv"
            app:layout_constraintRight_toLeftOf="@id/order_detail_go_iv"
            app:layout_constraintTop_toTopOf="@id/order_detail_logistics_iv"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            style="@style/auto_text_size"
            android:textColor="@color/javashop_color_navy"
            android:text="@{data.message}"
            app:autoSizeMaxTextSize="17sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:id="@+id/order_detail_logistics_time_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="h,7:1"
            style="@style/auto_text_size"
            app:layout_constraintTop_toBottomOf="@id/order_detail_logistics_content_tv"
            app:layout_constraintLeft_toLeftOf="@id/order_detail_logistics_content_tv"
            app:layout_constraintRight_toRightOf="@id/order_detail_logistics_content_tv"
            bind:layout_constraintBottom_toBottomOf="parent"
            android:text="@{data.time}"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="5dp"
            android:visibility="@{ data.type == 1 ? View.GONE : View.VISIBLE }"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
