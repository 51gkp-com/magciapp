<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/javashop_color_transparent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/javashop_color_transparent"
            app:layout_constraintDimensionRatio="h,1.5:1"
            />

        <TextView
            android:id="@+id/order_after_sale_confrim_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,25:1"
            android:gravity="center"
            style="@style/auto_text_size"
            android:text="提交服务单后，售后专员可能与您电话沟通，请保持电话畅通"
            android:textColor="#898989"
            android:layout_marginTop="10dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/order_after_sale_confrim_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintDimensionRatio="h,7:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_confrim_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/javashop_corners_red"
            android:text="提交"
            app:layout_constraintVertical_bias="0.6"
            android:textColor="@color/javashop_color_white"
            style="@style/auto_text_size"
            android:gravity="center"
            android:padding="3dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
