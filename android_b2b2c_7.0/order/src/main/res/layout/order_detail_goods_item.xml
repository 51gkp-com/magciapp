<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:background="@color/javashop_color_white"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/goods_detail_goods_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:padding="2dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_detail_goods_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/goods_detail_goods_iv"
            app:layout_constraintTop_toTopOf="@id/goods_detail_goods_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHeight_percent="0.25"
            android:lines="1"
            android:textSize="15sp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="吵架的撒恐龙当家阿卡丽三等奖阿卡丽时代巨轮卡萨丁就爱看绿色点击卢卡斯"
            android:textColor="@color/javashop_color_navy"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_detail_goods_spec_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/goods_detail_goods_iv"
            app:layout_constraintTop_toBottomOf="@id/order_detail_goods_name_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHeight_percent="0.18"
            android:lines="1"
            android:textSize="15sp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/javashop_color_nomal_color_gray"
            android:text="吵架的撒恐龙当家阿卡丽三等奖阿卡丽时代巨轮卡萨丁就爱看绿色点击卢卡斯"
            />

        <LinearLayout
            android:id="@+id/promotion_tag_parent"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/goods_detail_goods_iv"
            app:layout_constraintTop_toBottomOf="@id/order_detail_goods_spec_tv"
            app:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintVertical_bias="0.15"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHeight_percent="0.18"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/order_detail_goods_price_tv"
            app:layout_constraintLeft_toRightOf="@id/goods_detail_goods_iv"
            app:layout_constraintBottom_toBottomOf="@id/goods_detail_goods_iv"
            android:layout_marginLeft="10dp"
            app:layout_constraintHeight_percent="0.2"
            android:text="￥11.22"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="@color/javashop_color_price_red"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/order_detail_add_cart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/goods_detail_goods_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.25"
            style="@style/auto_text_size"
            android:text="加购物车"
            app:layout_constraintWidth_percent="0.2"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:textColor="@color/javashop_color_navy"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:id="@+id/order_detail_after"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/goods_detail_goods_iv"
            app:layout_constraintRight_toLeftOf="@id/order_detail_add_cart"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.25"
            style="@style/auto_text_size"
            android:text="申请售后"
            app:layout_constraintWidth_percent="0.2"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:textColor="@color/javashop_color_navy"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>