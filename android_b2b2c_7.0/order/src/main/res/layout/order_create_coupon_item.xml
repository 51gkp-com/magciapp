<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/javashop_shadow_white_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/order_create_coupon_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="h,3:1"
            style="@style/auto_text_size"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0"
            android:paddingLeft="10dp"
            android:text="优惠券"
            android:textColor="@color/javashop_color_black"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_create_coupon_hint"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:lines="1"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/order_create_coupon_title"
            app:layout_constraintTop_toTopOf="@id/order_create_coupon_title"
            app:layout_constraintBottom_toBottomOf="@id/order_create_coupon_title"
            android:background="@drawable/javashop_red_radis_bg"
            android:textColor="@color/color_white"
            android:text="2张可用优惠券"
            />
        <ImageView
            android:id="@+id/order_create_coupon_into"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.05"
            android:src="@drawable/javashop_icon_into_black"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/order_create_coupon_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/order_create_coupon_into"
            app:layout_constraintTop_toTopOf="@id/order_create_coupon_title"
            app:layout_constraintBottom_toBottomOf="@id/order_create_coupon_title"
            app:layout_constraintWidth_percent="0.8"
            style="@style/auto_text_size"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:gravity="center|right"
            android:maxLength="15"
            android:textColor="@color/javashop_color_black"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
