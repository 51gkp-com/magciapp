<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.OrderDetailViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/javashop_order_detail_header_bg"
            app:layout_constraintDimensionRatio="h,5:1"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/order_detail_header_state_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/javashop_icon_wait_rog_white"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/order_detail_header_state_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/order_detail_header_state_iv"
            app:layout_constraintBottom_toBottomOf="@id/order_detail_header_state_iv"
            app:layout_constraintLeft_toRightOf="@id/order_detail_header_state_iv"
            android:layout_marginLeft="10dp"
            app:layout_constraintWidth_percent="0.3"
            android:textColor="@color/javashop_color_white"
            android:text="@{data.orderStatus}"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:id="@+id/order_detail_header_express_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.3"
            android:gravity="center"
            style="@style/auto_text_size"
            android:text="@{data.logiName}"
            android:textColor="@color/javashop_color_white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
