<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:backgroundColor="@{@color/javashop_color_white}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,10:1"
            />
        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_after_sale_reson_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            bind:text_count_for_line="@{25}"
            android:text="退货原因"
            android:textSize="14sp"
            android:lines="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#676767"
            />

        <ImageView
            android:id="@+id/order_after_sale_reson_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintDimensionRatio="w,1:1"
            android:src="@drawable/javashop_into_gray"
            android:layout_marginRight="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/order_after_sale_reson_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/order_after_sale_reson_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/order_after_sale_reson_iv"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHeight_percent="0.4"
            android:layout_marginRight="5dp"
            android:text="退货原因退货原因退货原因退货原因"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp"
            android:textColor="@color/javashop_color_navy"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>