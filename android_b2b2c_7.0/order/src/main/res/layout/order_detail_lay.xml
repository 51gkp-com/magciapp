<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
   <data>
      <import type="android.view.View"/>
      <variable
          name="data"
          type="com.enation.javashop.android.middleware.model.OrderActionModel"/>
   </data>
   <android.support.constraint.ConstraintLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       xmlns:bind="http://schemas.android.com/apk/res-auto"
       android:background="@color/javashop_color_white"
       bind:backgroundColor="@{@color/javashop_color_white}"
       xmlns:app="http://schemas.android.com/apk/res-auto">
      <com.enation.javashop.android.lib.widget.CommonActionBar
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:title_text="订单详情"
          app:left_image="@drawable/javashop_back_black"
          app:holder_visibility="true"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          bind:auto_topbar_height="@{true}"
          android:id="@+id/order_detail_topbar"
          />

      <android.support.constraint.ConstraintLayout
          android:id="@+id/order_detail_action_bar"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="#f8f8f8"
          android:visibility="@{data.all() ? View.VISIBLE : View.GONE}"
          app:layout_constraintDimensionRatio="h,7:1"
          app:layout_constraintBottom_toBottomOf="parent"
          >
         <TextView
             android:id="@+id/order_detail_action_rog"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_red_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="确认收货"
             style="@style/auto_text_size"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:gravity="center"
             android:textColor="@color/javashop_color_select_color_red"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_marginRight="10dp"
             android:visibility="@{data.allowRog ? View.VISIBLE : View.GONE}"
             app:autoSizeMaxTextSize="100sp"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <TextView
             android:id="@+id/order_detail_action_pay"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_red_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="去付款"
             style="@style/auto_text_size"
             android:padding="8dp"
             android:gravity="center"
             android:layout_marginRight="10dp"
             android:textColor="@color/javashop_color_select_color_red"
             app:layout_constraintRight_toLeftOf="@id/order_detail_action_rog"
             android:visibility="@{data.allowPay ? View.VISIBLE : View.GONE}"
             app:autoSizeMaxTextSize="100sp"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <TextView
             android:id="@+id/order_detail_action_comment"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_black_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="评价晒单"
             style="@style/auto_text_size"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:gravity="center"
             android:textColor="@color/black"
             android:layout_marginRight="10dp"
             app:layout_constraintRight_toLeftOf="@id/order_detail_action_pay"
             android:visibility="@{data.allowComment ? View.VISIBLE : View.GONE}"
             app:autoSizeMaxTextSize="100sp"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <TextView
             android:id="@+id/order_detail_action_logistics"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_black_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="查看物流"
             style="@style/auto_text_size"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:gravity="center"
             android:textColor="@color/black"
             android:layout_marginRight="10dp"
             app:layout_constraintRight_toLeftOf="@id/order_detail_action_comment"
             android:visibility="@{data.allowExpress ? View.VISIBLE : View.GONE}"
             app:autoSizeMaxTextSize="100sp"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <TextView
             android:id="@+id/order_detail_action_after"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_black_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="申请售后"
             style="@style/auto_text_size"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:gravity="center"
             android:visibility="@{data.allowApplyService ? View.VISIBLE : View.GONE}"
             android:textColor="@color/black"
             android:layout_marginRight="10dp"
             app:layout_constraintRight_toLeftOf="@id/order_detail_action_logistics"
             app:autoSizeMaxTextSize="100sp"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <TextView
             android:id="@+id/order_detail_action_cancle"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:background="@drawable/javashop_fillet_black_bg"
             app:layout_constraintWidth_percent="0.2"
             app:layout_constraintHeight_percent="0.7"
             android:text="取消订单"
             style="@style/auto_text_size"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:gravity="center"
             android:textColor="@color/black"
             android:layout_marginRight="10dp"
             app:layout_constraintRight_toLeftOf="@id/order_detail_action_after"
             app:autoSizeMaxTextSize="100sp"
             android:visibility="@{data.cancelState ? View.VISIBLE : View.GONE}"
             app:autoSizeMinTextSize="10sp"
             app:autoSizeStepGranularity="2sp"
             app:autoSizeTextType="uniform"
             tools:ignore="MissingPrefix"
             />
         <View android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="@color/javashop_color_line_gray"
               app:layout_constraintTop_toTopOf="parent"
             />
      </android.support.constraint.ConstraintLayout>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/order_detail_rv"
          android:layout_width="0dp"
          android:background="@color/javashop_color_cyan"
          android:layout_height="0dp"
          app:layout_constraintTop_toBottomOf="@id/order_detail_topbar"
          app:layout_constraintBottom_toTopOf="@id/order_detail_action_bar"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          >
      </android.support.v7.widget.RecyclerView>
   </android.support.constraint.ConstraintLayout>
</layout>
