<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.AccountInfo"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/javashop_color_white"
        android:paddingBottom="10dp"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_after_sale_pay_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,8:1"
            android:text="退款方式"
            bind:text_count_for_line="@{25}"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#676767"
            />
        <TextView
            android:id="@+id/order_after_sale_pay_wechat"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/auto_text_size"
            android:padding="5dp"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="h,2.5:1"
            android:textColor="@color/javashop_color_pay_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/javashop_fillet_red_bg"
            android:text="微信"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_title"
            android:gravity="center"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/order_after_sale_pay_alipay"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/auto_text_size"
            android:padding="5dp"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="h,2.5:1"
            android:textColor="@color/javashop_color_navy"
            app:layout_constraintLeft_toRightOf="@id/order_after_sale_pay_wechat"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:text="支付宝"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_title"
            android:gravity="center"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/order_after_sale_pay_union"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/auto_text_size"
            android:padding="5dp"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="h,2.5:1"
            android:textColor="@color/javashop_color_navy"
            app:layout_constraintLeft_toRightOf="@id/order_after_sale_pay_alipay"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/javashop_fillet_gray_bg"
            android:text="银联"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_title"
            android:gravity="center"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/order_after_sale_pay_account_info_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,20:1"
            android:layout_marginTop="20dp"
            android:text="退款账号相关信息："
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_wechat"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#898989"
            style="@style/auto_text_size"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="MissingPrefix"
            />


        <EditText
            android:id="@+id/order_after_sale_pay_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_account_info_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@={data.returnAccount}"
            android:hint="请输入退款账号信息"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="h,10:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            />
        <EditText
            android:id="@+id/order_after_sale_pay_bank_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_account"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入退款银行名城"
            android:text="@={data.bankName}"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="h,10:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            />
        <EditText
            android:id="@+id/order_after_sale_pay_bank_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_bank_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入退款银行账号"
            android:paddingLeft="10dp"
            android:text="@={data.bankAccountNumber}"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="h,10:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            />
        <EditText
            android:id="@+id/order_after_sale_pay_bank_create_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_bank_account"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入退款银行开户用户名"
            android:paddingLeft="10dp"
            android:text="@={data.bankAccountName}"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="h,10:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            />
        <EditText
            android:id="@+id/order_after_sale_pay_bank_create_bankname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_after_sale_pay_bank_create_username"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="请输入退款银行开户行全称"
            android:text="@={data.bankDepositName}"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="h,10:1"
            android:background="@drawable/javashop_fillet_gray_bg"
            />
    </android.support.constraint.ConstraintLayout>
</layout>