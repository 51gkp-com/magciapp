<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
        <android.support.constraint.ConstraintLayout
            android:background="@color/javashop_color_white"
            bind:backgroundColor="@{@color/javashop_color_white}"
            android:paddingBottom="5dp"
            android:id="@+id/goods_info_hot_comment_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/goods_info_hot_comment_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,8:1"
                android:paddingLeft="10dp"
                >
                <com.enation.javashop.android.lib.widget.AutoSizeTextView
                    android:id="@+id/goods_info_hot_comment_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeStepGranularity="2sp"
                    bind:layout_constraintHeight_percent="0.5"
                    bind:layout_constraintWidth_percent="0.5"
                    app:autoSizeTextType="uniform"
                    tools:ignore="MissingPrefix"
                    style="@style/auto_text_size"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="评论(9999)"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/goods_info_hot_comment_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintDimensionRatio="w,1:1"
                    android:src="@drawable/javashop_into_gray"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <com.enation.javashop.android.lib.widget.AutoSizeTextView
                    android:id="@+id/goods_info_comment_percent_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    bind:layout_constraintWidth_percent="0.1"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/goods_info_hot_comment_iv"
                    android:layout_marginRight="5dp"
                    android:text="100%"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/javashop_color_price_red"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    tools:ignore="MissingPrefix"
                    style="@style/auto_text_size"
                    />
                <com.enation.javashop.android.lib.widget.AutoSizeTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    bind:layout_constraintWidth_percent="0.2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/goods_info_comment_percent_tv"
                    android:layout_marginRight="5dp"
                    android:text="好评率"
                    android:gravity="center|right"
                    android:lines="1"
                    android:textColor="@color/javashop_color_black"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    tools:ignore="MissingPrefix"
                    style="@style/auto_text_size"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/javashop_color_line_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/goods_info_hot_comment_header"
                    android:id="@+id/goods_info_hot_comment_content_lay"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/goods_info_hot_comment_a_header"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="h,10:1"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/goods_info_comment_item_face_a"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.85"
                            app:layout_constraintDimensionRatio="w,1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:src="@mipmap/member_nologin_userface"
                            />
                        <com.enation.javashop.android.lib.widget.AutoSizeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.5"
                            android:textColor="@color/javashop_color_black"
                            app:layout_constraintTop_toTopOf="@id/goods_info_comment_item_face_a"
                            app:layout_constraintBottom_toBottomOf="@id/goods_info_comment_item_face_a"
                            app:layout_constraintLeft_toRightOf="@id/goods_info_comment_item_face_a"
                            android:layout_marginLeft="10dp"
                            android:text="炫酷吊炸天"
                            android:lines="1"
                            android:id="@+id/goods_info_comment_item_name_a"
                            />
                        <com.enation.javashop.android.lib.widget.StarView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.25"
                            app:layout_constraintHeight_percent="0.3"
                            app:star="4"
                            android:visibility="invisible"
                            android:id="@+id/goods_info_comment_item_star_a"
                            />
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.25"
                            android:textSize="15sp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/javashop_color_navy"
                            android:id="@+id/goods_info_comment_item_grade"
                            />

                    </android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/goods_info_hot_comment_a_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@id/goods_info_hot_comment_a_header"
                        android:textSize="15sp"
                        android:textColor="@color/javashop_color_black"
                        android:text="人生第一台买电脑 第一眼看到的时候就被颜值深深吸引了 导致后来看其他牌子的电脑都觉得不如这个好看?颜狗本狗了 快递速度超快 头天晚上下单第二天中午就到了 本子很轻很薄 运行速度很快 开机七秒左右 希望这个速度可以保持一两年 电池续航目前还行 充电也挺快的 就是送的配件真的太少了 就一个电脑包 还得自己买鼠标 总体还是不错 挺满意的 等用段时间看看再来追加评论"
                        />
                    <android.support.constraint.ConstraintLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/goods_info_hot_comment_a_image_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@id/goods_info_hot_comment_a_content_tv"
                        >
                        <ImageView
                            android:id="@+id/goods_info_hot_comment_a_image_a"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.225"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintRight_toLeftOf="@+id/goods_info_hot_comment_a_image_b"
                            android:src="@color/black"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:id="@+id/goods_info_hot_comment_a_image_b"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.225"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:src="@color/black"
                            android:scaleType="centerCrop"
                            app:layout_constraintLeft_toRightOf="@id/goods_info_hot_comment_a_image_a"
                            app:layout_constraintRight_toLeftOf="@+id/goods_info_hot_comment_a_image_c"
                            />
                        <ImageView
                            android:id="@+id/goods_info_hot_comment_a_image_c"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.225"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintLeft_toRightOf="@id/goods_info_hot_comment_a_image_b"
                            app:layout_constraintRight_toLeftOf="@+id/goods_info_hot_comment_a_image_d"
                            android:src="@color/black"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:id="@+id/goods_info_hot_comment_a_image_d"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.225"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:src="@color/black"
                            android:scaleType="centerCrop"
                            app:layout_constraintLeft_toRightOf="@+id/goods_info_hot_comment_a_image_c"
                            />
                    </android.support.constraint.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:background="@color/javashop_color_line_gray"
                        app:layout_constraintTop_toBottomOf="@id/goods_info_hot_comment_a_image_lay"
                        />
                </android.support.constraint.ConstraintLayout>
            <com.enation.javashop.android.lib.widget.AutoSizeTextView
                android:id="@+id/goods_info_comment_more_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,9:1"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:background="@drawable/javashop_btn_balck_line_bg"
                app:layout_constraintTop_toBottomOf="@id/goods_info_hot_comment_content_lay"
                android:lines="1"
                android:gravity="center"
                android:text="查看全部评价"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix"
                style="@style/auto_text_size"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/javashop_color_line_gray"
                app:layout_constraintTop_toTopOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
</layout>
