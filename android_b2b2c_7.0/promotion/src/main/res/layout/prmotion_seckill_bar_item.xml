<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/javashop_color_transparent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/promotion_seckill_bar_item_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/promotion_seckill_bar_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.6"
        android:text="08:00"
        android:textStyle="bold"
        style="@style/auto_text_size"
        android:visibility="visible"
        android:textColor="@color/javashop_color_white"
        app:autoSizeMaxTextSize="25sp"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        />
    <TextView
        android:id="@+id/promotion_seckill_bar_item_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.4"
        android:text="即将开始"
        app:layout_constraintVertical_bias="0.9"
        style="@style/auto_text_size"
        app:autoSizeMaxTextSize="15sp"
        android:textColor="@color/javashop_color_white"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:ignore="MissingPrefix"
        />
</android.support.constraint.ConstraintLayout>