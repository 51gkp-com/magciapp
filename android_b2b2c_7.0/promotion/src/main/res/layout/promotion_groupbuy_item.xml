<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.enation.javashop.android.middleware.model.GoodsItemViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        bind:backgroundColor="@{@color/javashop_color_white}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:id="@+id/promotion_groupbuy_item_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,3:1"
            android:background="@color/javashop_color_white"
            />

        <ImageView
            android:id="@+id/promotion_groupbuy_item_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/promotion_groupbuy_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/promotion_groupbuy_item_bg"
            app:layout_constraintLeft_toLeftOf="@id/promotion_groupbuy_item_bg"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintDimensionRatio="w,1:1"
            bind:url="@{data.goodsImage}"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/promotion_groupbuy_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/javashop_color_black"
            android:gravity="left"
            app:layout_constraintLeft_toRightOf="@id/promotion_groupbuy_item_iv"
            app:layout_constraintTop_toTopOf="@id/promotion_groupbuy_item_bg"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHeight_percent="0.35"
            android:textSize="18sp"
            android:text="@{data.goodsName}"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/promotion_groupbuy_item_org_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/promotion_groupbuy_item_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/promotion_groupbuy_item_bg"
            android:layout_marginBottom="10dp"
            app:layout_constraintHeight_percent="0.12"
            android:text="@{ String.valueOf( data.orginPrice ) }"
            android:textSize="20sp"
            android:lines="1"
            app:price_type="true"
            android:gravity="center_vertical"
            app:delete_line="true"
            android:textColor="#8a8d8d"
            />

        <com.enation.javashop.android.lib.widget.AutoSizeTextView
            android:id="@+id/promotion_groupbuy_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/promotion_groupbuy_item_name_tv"
            app:layout_constraintBottom_toTopOf="@id/promotion_groupbuy_item_org_price_tv"
            app:layout_constraintHeight_percent="0.2"
            android:text="@{ String.valueOf( data.goodsPrice ) }"
            android:lines="1"
            app:price_type="true"
            android:gravity="center_vertical"
            android:textSize="40sp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:textColor="@color/javashop_color_price_red"
            />

        <TextView
            android:id="@+id/promotion_groupbuy_item_buy_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="@id/promotion_groupbuy_item_bg"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintDimensionRatio="h,2:1"
            android:background="@drawable/javashop_corners_red"
            style="@style/auto_text_size"
            android:text="抢购"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/javashop_color_white"
            />
        <com.enation.javashop.android.lib.widget.SaleProgressView
            android:id="@+id/promotion_groupbuy_item_spv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/promotion_groupbuy_item_name_tv"
            app:layout_constraintTop_toBottomOf="@id/promotion_groupbuy_item_name_tv"
            app:layout_constraintBottom_toTopOf="@id/promotion_groupbuy_item_price_tv"
            app:layout_constraintRight_toLeftOf="@id/promotion_groupbuy_item_buy_tv"
            app:textSize="10sp"
            app:sideWidth="2dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHorizontal_bias="0"
            app:nearOverText="即将售罄"
            app:overText="已售罄"
            app:textHeader="已售"
            app:sideColor="#ff888a"
            app:isNeedAnim="false"
            app:textColor="#ff888a"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintHeight_percent="0.15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/javashop_color_line_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            />
    </android.support.constraint.ConstraintLayout>
</layout>